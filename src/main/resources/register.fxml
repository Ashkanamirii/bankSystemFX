<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="535.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.RegisterController">
   <children>
      <AnchorPane prefHeight="82.0" prefWidth="600.0" style="-fx-background-color: #E96151;">
         <children>
            <ImageView fx:id="registerImageView" fitHeight="60.0" fitWidth="60.0" layoutX="34.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/register.png" />
               </image>
            </ImageView>
            <Label contentDisplay="CENTER" layoutX="214.0" layoutY="25.0" prefHeight="17.0" prefWidth="179.0" text="User Registration" textAlignment="CENTER" textOverrun="CENTER_WORD_ELLIPSIS">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label layoutX="92.0" layoutY="143.0" text="Firstname" />
      <TextField fx:id="firstNameTextField" layoutX="90.0" layoutY="165.0" prefHeight="25.0" prefWidth="421.0" promptText="Firstname" />
      <Label layoutX="92.0" layoutY="197.0" text="Lastname" />
      <TextField fx:id="LastNameTextField" layoutX="91.0" layoutY="219.0" prefHeight="25.0" prefWidth="421.0" promptText="Lastname" />
      <Label layoutX="93.0" layoutY="250.0" text="Salary" />
      <TextField fx:id="salaryTextField" layoutX="91.0" layoutY="274.0" prefHeight="25.0" prefWidth="421.0" promptText="use for creat credit card" />
      <Label layoutX="93.0" layoutY="306.0" text="Date of birth" />
      <Label layoutX="91.0" layoutY="364.0" text="Choose your type of account that you want to creat:" />
      <Button fx:id="registerButton" layoutX="87.0" layoutY="437.0" mnemonicParsing="false" onAction="#registerButtonAction" prefHeight="31.0" prefWidth="429.0" style="-fx-background-color: #E96151;" text="Register" textAlignment="CENTER" textFill="#fffafa">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button fx:id="closeButton" alignment="TOP_CENTER" contentDisplay="TOP" layoutX="87.0" layoutY="483.0" mnemonicParsing="false" onAction="#closeButtonAction" prefHeight="30.0" prefWidth="429.0" style="-fx-background-color: #E96151;" text="Close" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <DatePicker fx:id="dateOfBirthBox" layoutX="93.0" layoutY="326.0" prefHeight="25.0" prefWidth="231.0" promptText="you must be older than 18 years old" />
      <ChoiceBox fx:id="accountChoiceBox" layoutX="370.0" layoutY="360.0" prefHeight="25.0" prefWidth="142.0" style="-fx-background-color: #E96151;" />
      <Label layoutX="92.0" layoutY="91.0" text="Personal number" />
      <TextField fx:id="personalNumberTextField" layoutX="91.0" layoutY="113.0" prefHeight="25.0" prefWidth="421.0" promptText="Enter your social security number 10 digits" />
      <Label fx:id="registerMessageLabel" alignment="TOP_CENTER" layoutX="91.0" layoutY="402.0" prefHeight="17.0" prefWidth="421.0" textFill="#0720ed">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
